<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">


	<!-- Specifier le chemin du fichier data-source.properties -->
	<context:property-placeholder
		location="classpath*:data-source.properties" />

	<!-- Definir le bean DataSource : c'est un bean qui encapsule les infos 
		de la connextion à labd -->
	<bean id="dataSourceBean"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">

		<!-- Injection de dependances via les setters: specifer les infos de la 
			connexion à la bd -->
		<property name="url" value="${jdbc.url}" />
		<property name="driverClassName" value="${jdbc.driver}" />
		<property name="username" value="${jdbc.user}" />
		<property name="password" value="${jdbc.password}" />
	</bean>


	<!-- 1: la partie autorisation: sert à definir les urls protégées et les 
		autorisation d'accés associées -->
	<security:http>

		<!-- specifier les urls protégées et les permissions d'accés -->
		<security:intercept-url pattern="/client/**"
			access="ROLE_CLIENT ROLE_ADMIN" />
		<security:intercept-url pattern="/adminProd/**"
			access="ROLE_ADMIN_PROD" />
		<security:intercept-url
			pattern="/adminProdCat/**" access="ROLE_ADMIN_CAT" />
		<security:intercept-url pattern="/admin/**"
			access="ROLE_ADMIN_CAT, ROLE_ADMIN_PROD " />

		<!-- Utilisation d'un formulaire de connexion généré automatiquement -->
		<!-- <security:http-basic/> -->

		<!-- Utilisation d'un formulaire perso pour la connexion -->
		<security:form-login login-page="/login"
			authentication-failure-url="/echec" login-processing-url="/connexion" />

		<!-- Afficher une page perso dans le cas où l'acces est refusé -->
		<security:access-denied-handler
			error-page="/denied" />

		<!-- aller à accueil lors de la deconnection -->
		<security:logout logout-success-url="/logout"
			logout-url="/deconnexion" />

	</security:http>






	<!-- 2: la partie authenfication: sert à chercher les users et leur roles 
		dans la bd -->
	<security:authentication-manager>
		<security:authentication-provider>

			<security:jdbc-user-service
				data-source-ref="dataSourceBean"
				users-by-username-query="SELECT id_admin,mail,mdp FROM admins WHERE mail=?"
				authorities-by-username-query="SELECT a.mail,r.rolename FROM admins as a, roles as r WHERE a.id_a=r.a_id AND a.mail=?" />

		</security:authentication-provider>
	</security:authentication-manager>

</beans>
